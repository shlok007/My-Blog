<div class="container">
<hr/>
<h4 class="left">COMMENTS & REVIEWS</h4>
<br/><br/><br/> <br/>
 <%=render 'comments/newcomment' %>
  <hr />
<div align="left">
<%i=Post.find(params[:id]).comments.count-1%>
<div class="row"> 
<%while i>=0%>
<div class="col s12 l6 m6">
<div class="card z-depth-1">
<div class="card-content black-text">
<span class="card-title"><h5><%=Post.find(params[:id]).comments[i].name%></h5></span>
<p><b><%=Post.find(params[:id]).comments[i].email%></b></p>
<br />
<p>  <%=Post.find(params[:id]).comments[i].content%></p>
<br/>
</div>
</div>
</div>
<%i-=1%>
<%end%>
</div>
</div></div>